# Spring Boot Application
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/chatdb
SPRING_DATASOURCE_USERNAME=chatuser
SPRING_DATASOURCE_PASSWORD=chatpass
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
SPRING_SECURITY_ENABLED=false

# Logstash
LOGSTASH_XPACK_MONITORING_ENABLED=false

# Postgres
POSTGRES_USER=chatuser
POSTGRES_PASSWORD=chatpass
POSTGRES_DB=chatdb

# API Key
API_KEY=supersecret

# Elasticsearch
ELASTICSEARCH_HOSTS=http://elasticsearch:9200

# Resilience4j
RESILIENCE4J_RATELIMITER_API_RATELIMITER_LIMIT_FOR_PERIOD=10
RESILIENCE4J_RATELIMITER_API_RATELIMITER_LIMIT_REFRESH_PERIOD=1s
RESILIENCE4J_RATELIMITER_API_RATELIMITER_TIMEOUT_DURATION=500ms